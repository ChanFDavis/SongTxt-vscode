{
    "name": "songtxt",
    "displayName": "SongTxt",
    "description": "Adds support for editing text files for songs including lyrics, chords, guitar tablature, etc.",
    "version": "0.1.0",
    "publisher": "gusper",
    "engines": {
        "vscode": "^1.26.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.enableSongtxt"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.enableSongtxt",
                "title": "Enable SongTxt"
            },
            {
                "command": "extension.disableSongtxt",
                "title": "Disable SongTxt"
            }
        ],
        "languages": [
            {
                "id": "songtxt",
                "aliases": [
                    "SongTxt",
                    "Songtxt",
                    "SongTXT",
                    "SONGTXT"
                ],
                "extensions": [
                    ".txt"
                ]
            }
        ],
        "grammars": [
            {
                "language": "songtxt",
                "scopeName": "text.songtxt",
                "path": "./syntaxes/songtxt.tmLanguage.json"
            }
        ],
        "scripts": {
            "vscode:prepublish": "npm run compile",
            "compile": "tsc -p ./",
            "watch": "tsc -watch -p ./",
            "postinstall": "node ./node_modules/vscode/bin/install",
            "test": "npm run compile && node ./node_modules/vscode/bin/test"
        },
        "devDependencies": {
            "typescript": "^2.6.1",
            "vscode": "^1.1.21",
            "tslint": "^5.8.0",
            "@types/node": "^8.10.25",
            "@types/mocha": "^2.2.42"
        }
    }
}